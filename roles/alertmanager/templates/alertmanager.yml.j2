  resolve_timeout: 5s

route:
  receiver: discord
  group_wait: 5s
  group_interval: 5s
  repeat_interval: 1h

receivers:
  - name: discord
    webhook_configs:
      - url: '{{ discord_webhook_url }}'
        send_resolved: true
