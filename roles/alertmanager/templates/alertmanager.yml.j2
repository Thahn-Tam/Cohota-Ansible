global:
  resolve_timeout: 5m

route:
  receiver: 'discord'
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 1h

receivers:
  - name: 'discord'
    webhook_configs:
      - send_resolved: true
        url: '{{ discord_webhook_url }}'

